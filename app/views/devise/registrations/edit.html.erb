<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="profile-container col-9 mt-3 pt-2 pb-5">

      <h3>Edit <%= resource_name.to_s.humanize %> Profile</h3>
      <hr noshade>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field form-group row justify-content-center mb-3">
          <% if current_user.avatar.present? %>
            <%= image_tag current_user.avatar, class: "rounded mx-auto d-block", height: 150 %>
          <% else %>
            <span class="attached-image">
              +
            </span>
          <% end %>
          <%= f.file_field :avatar, class: "form-control", accept:"image/png, image/gif, image/jpeg", style:"display: block; height: 150px; width: 150px; position: absolute; top: 0px; opacity: 0;" %>
        </div>

        <div class="form-group row justify-content-center">
          <label class="col-sm-2 col-form-label mb-n3 font-weight-bold">Basic Information</label>
        </div>

        <div class="field form-group row justify-content-center">
          <%= f.label :firstname, "First Name", class: "col-sm-2 col-form-label" %><br />
          <div class="col-sm-4">
            <%= f.text_field :firstname, autocomplete: "firstname", class: "form-control", placeholder: "First Name" %>
          </div>
        </div>

        <div class="field form-group row justify-content-center">
          <%= f.label :lastname, "Last Name", class: "col-sm-2 col-form-label" %><br />
          <div class="col-sm-4">
            <%= f.text_field :lastname, autocomplete: "lastname", class: "form-control", placeholder: "Last Name" %>
          </div>
        </div>

        <div class="field form-group row justify-content-center">
          <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
          <div class="col-sm-4">
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <label class="col-sm-2 col-form-label mb-n3 font-weight-bold">Password</label>
        </div>

        <div class="field form-group row justify-content-center">
          <%= f.label :current_password, class: "col-sm-2 col-form-label" %><br />
          <div class="col-sm-4">
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>
        </div>

        <div class="field form-group row justify-content-center">
          <%= f.label :password, class: "col-sm-2 col-form-label" %><br />
          <div class="col-sm-4">
            <%= f.password_field :password, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
        </div>

        <div class="field form-group row justify-content-center">
          <%= f.label :password_confirmation, class: "col-sm-2 col-form-label" %><br />
          <div class="col-sm-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "Save", class:"btn btn-success" %>
        </div>

      <% end %>

      <%#<h3>Cancel my account</h3> %>

      <%#<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%#= link_to "Back", :back %>

  </div>
</div>
</div>
