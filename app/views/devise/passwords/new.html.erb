<div class="row justify-content-center mt-4">
  <div class="col-10 col-sm-8 col-lg-5">
    <h1 class="text-center mb-4">Forgot Your Password?</h1>

    <div class="account-wall">
      <img class="profile-img mx-auto d-block mb-4" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
          alt="">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <%= f.label :email, "Email for Comfirmation" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
        </div>

        <div class="devise actions text-center">
          <%= f.submit "Reset Password", class:"btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
